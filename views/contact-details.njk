{% extends "layout.njk" %}

{% block content %}
<h1 class="mb-4">Enter Your Contact Details</h1>

{% if errors %}
  <div class="alert alert-danger">
    <ul>
      {% for error in errors %}
        <li>{{ error }}</li>
      {% endfor %}
    </ul>
  </div>
{% endif %}

<form method="post" action="/contact-details">
  <div class="mb-3">
    <label for="name" class="form-label">Name:</label>
    <input type="text" id="name" name="name" class="form-control" value="{{ name | default('') }}">
  </div>
  <div class="mb-3">
    <label for="email" class="form-label">Email:</label>
    <input type="email" id="email" name="email" class="form-control" value="{{ email | default('') }}">
  </div>
  <button type="submit" class="btn btn-primary">Continue</button>
</form>
{% endblock %}